@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dashboard - Lịch công tác</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    
    <div class="app-root d-flex">
        
        <aside class="sidebar bg-primary text-white">
            <div class="sidebar-header text-center py-4">
                <div class="logo">DUT</div>
                <div class="small">Hệ thống</div>
            </div>
            
            <nav class="nav flex-column px-2">
                <a class="nav-link text-white" href="#">Người dùng</a>
                <a class="nav-link text-white" href="#">Lịch tuần</a>
                <a class="nav-link text-white" href="#">Quản lý lịch tuần</a>
                <a class="nav-link text-white" href="#">Khoa và phòng ban</a>
            </nav>
        </aside>
        
        <div class="main flex-grow-1">
            
            <header class="app-header bg-warning d-flex justify-content-between align-items-center px-3">
                <div class="d-flex align-items-center gap-3">
                    <button class="btn btn-sm btn-light">☰</button>
                    <h5 class="mb-0">Lịch công tác tuần</h5>
                </div>
                
                <div class="d-flex align-items-center gap-3">
                    <div class="text-end me-3">Công Nghệ Phần Mềm - Fantastic Four</div>
                    <img src="/images/user.png" alt="user" class="rounded-circle" width="36" height="36" />
                </div>
            </header>
            
            <main class="p-4">
                **@RenderBody()**
            </main>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
